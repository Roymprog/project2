<h1>Listing courses</h1>

<table>
  <tr>
    <th>Course's name</th>
    <th>Institute</th>
    <th>Ec</th>
    <th>Staff</th>
    <th>Blok</th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td><%= course.institute %></td>
    <td><%= course.ec %></td>
    <td><%= course.staff(params[:name]) %></td>
    <td><%= course.blok %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

