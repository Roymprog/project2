<h1>Listing courses</h1>

<%= link_to 'Search Course', search_courses_path %>
<br>
<%= link_to 'Bookmarked courses', bookmarked_courses_path %>
<br>
<table>
  <tr>
    <th>Course's name</th>
    <th>Institute</th>
    <th>Ec</th>
    <th>Staff</th>
    <th>Blok</th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td><%= course.institute %></td>
    <td><%= course.ec %></td>
    <td><%= course.staffs.map(&:name).join(",") %></td>
    <td><%= course.period %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


